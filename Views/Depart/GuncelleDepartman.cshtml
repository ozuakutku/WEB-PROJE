@model ASP.NET_Core_Proje_1.Models.departmanlar

@{
    ViewData["Title"] = "GuncelleDepartman";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departman Güncelleme</h2>

@using (Html.BeginForm("DepartmanGuncelle", "Depart", FormMethod.Post))
{
    <div class="form-group">
        <label>Departman ID</label>
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group">
        <label>Departman Adı</label>
        @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Detay</label>
        @Html.TextBoxFor(x => x.Detay, new { @class = "form-control" })
    </div>
    <button class="btn btn-warning">Departman Güncelle</button>
}
